<div class="modal fade" id="patientModal" role="dialog">
    <div class="modal-dialog modal-md" role="document">
        <div class="modal-content">
            <form id="form1" action="/api/op/save" method="POST">
            <div class="modal-header">
                <h3 class="modal-title" id="exampleModalLabel">OP</h3>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <div class="row">
                    <div class="col-md-3">
                        <div class="form-group">
                            <label>Patient Code</label>
                            <input type="text" id="patient_code" class="form-control" name="patient_code" required>
                            <input type="hidden" class="form-control" id="p_id" name="p_id" required>
                        </div>
                    </div>
                </div>
                 <div class="row">
                   <div class="col-md-4">
                        <div class="form-group">
                            <label>Doctor</label>
                            <select class="form-control" id="p_op_doctor" name="p_op_doctor" required="">
                                <option value="1">Doctor 1</option>
                                <option value="2">Doctor 2</option>
                                <option value="3">Doctor 3</option>
                            </select>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Date</label>
                            <input type="date" class="form-control" value="dd-mm-yyyy" id="p_date" name="p_date">
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Note</label>
                            <input type="text" class="form-control"id="p_note" name="p_note">
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Patient Name</label>
                            <input type="text" class="form-control" id="p_name" name="p_name" readonly disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                         <div class="form-group">
                            <label>Mobile</label>
                            <input type="number" class="form-control" id="p_mobile" name="p_mobile" readonly disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                         <div class="form-group">
                            <label>Disrict</label>
                            <input type="text" class="form-control" id="p_disctrict" name="p_disctrict" readonly disabled>
                        </div>
                    </div>
                </div>
                <div class="row">
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Place</label>
                            <input type="text" class="form-control" id="p_place" name="p_place" readonly disabled>
                        </div>
                    </div>
                    <div class="col-md-4">
                        <div class="form-group">
                            <label>Sex</label>
                            <input type="text" class="form-control" id="p_sex" name="p_sex" readonly disabled>
