<script>
   $(document).ready(function(){
       $('#form1').on('keyup keypress', function(e) {
            var keyCode = e.keyCode || e.which;
            if (keyCode === 13) { 
                e.preventDefault();
                return false;
            }
        });

       $('#patient_code').off("keypress").on('keypress',function(e){
           if(e.charCode == 13){
               $.get("api/patient/code/"+this.value, function(data) {
                    res = data //JSON.parse(data);
                    if(res.data){
                        $('#p_id').val(res.data.id);
                        $('#p_name').val(res.data.name);
                        $('#p_mobile').val(res.data.mobile);
                        $('#p_disctrict').val(res.data.email);
                        $('#p_place').val(res.data.place);
                        $('#p_sex').val(res.data.sex);
                        $('#p_age').val(res.data.disease);
                        $('#p_disease').val(res.data.disease);
                        $('#p_sub_disease').val(res.data.disease);
                        $('#p_doctor').val(res.data.disease);
                    }
                    
                });
           }
       })


        $("#table").DataTable({
            "fnDrawCallback": function( oSettings ) {
                load();
            },
        });

        function load(){
            $('.edit-btn').off('click').on('click',function(){
                $('#sd_id').val($(this).data('id'));
                $('#sd_name').val($(this).data('name'));
                $('#patientModal').modal('show');
            });
        }
        
        function reload(){

        }
      
   })
</script>
